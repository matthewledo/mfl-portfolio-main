---
import Layout from "../layouts/Layout.astro";
import MiFoto from "../assets/img/MiFoto.png";
import CopyMail from "../components/links/copyMail.jsx";
import { FaLinkedin, FaGithub, FaEnvelope } from "react-icons/fa";

const links = [
  {
    href: "https://www.linkedin.com/in/matthew-ledo",
    label: "LinkedIn",
    icon: FaLinkedin,
    description: "Professional network & endorsements"
  },
  { 
    href: "https://github.com/matthewledo", 
    label: "GitHub",
    icon: FaGithub,
    description: "Technical projects & contributions" 
  },
];
---

<Layout>
  <section class="bg-white flex min-h-screen flex-col items-center justify-center px-6 py-20">
    
    <div class="text-center max-w-2xl mb-12">
      <div class="relative inline-block mb-8">
        <div class="h-32 w-32 rounded-full border-4 border-emerald-500/10 p-1">
          <img
            src={MiFoto.src}
            alt="Matthew Ledo"
            class="h-full w-full rounded-full object-cover shadow-inner"
          />
        </div>
        <span class="absolute bottom-1 right-2 flex h-6 w-6">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-6 w-6 bg-emerald-500 border-4 border-white"></span>
        </span>
      </div>

      <h1 class="text-4xl font-extrabold text-slate-900 tracking-tight mb-4">
        Letâ€™s Build the Future of <span class="text-emerald-600">Digital Commerce</span>
      </h1>
      <p class="text-lg text-slate-600 leading-relaxed">
        I am currently open to new opportunities where I can apply my 5+ years of experience in 
        high-traffic front-end execution and technical SEO.
      </p>
    </div>

    <div class="w-full max-w-2xl space-y-6">
      
      <div class="bg-slate-50 border border-slate-100 p-8 rounded-3xl text-center shadow-sm">
        <h3 class="text-sm font-bold text-slate-400 uppercase tracking-widest mb-4">Direct Contact</h3>
        <CopyMail client:visible />
        <p class="mt-4 text-xs text-slate-400 font-medium">Click above to copy my professional email</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {
          links.map((link) => (
            <a
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              class="group flex items-center gap-4 p-5 rounded-2xl border border-slate-200 bg-white transition-all hover:border-emerald-500 hover:shadow-lg hover:-translate-y-1"
            >
              <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-slate-50 text-slate-400 group-hover:bg-emerald-500 group-hover:text-white transition-colors">
                <link.icon size={24} />
              </div>
              <div class="text-left">
                <span class="block font-bold text-slate-900">{link.label}</span>
                <span class="block text-xs text-slate-500">{link.description}</span>
              </div>
            </a>
          ))
        }
      </div>

      <div class="pt-8 text-center border-t border-slate-100 mt-12">
        <p class="text-slate-500 text-sm">
          Based in <span class="text-slate-900 font-semibold">Calgary, AB</span>. Available for remote or hybrid relocation opportunities.
        </p>
      </div>
    </div>
  </section>
</Layout>