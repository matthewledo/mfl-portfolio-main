<section class="max-w-6xl mx-auto px-6 py-20">
  <div class="flex items-center gap-4 mb-12">
    <h2 class="text-3xl font-bold text-slate-900 whitespace-nowrap">Tools & Technologies</h2>
    <div class="h-px bg-slate-200 w-full"></div>
  </div>

  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-6">
    {
      [
        { name: "HTML5", icon: "html5" },
        { name: "CSS3", icon: "css3" },
        { name: "JavaScript", icon: "javascript" },
        { name: "Shopify", icon: "shopify" },
        { name: "Astro", icon: "astro" },
        { name: "React", icon: "react" },
        { name: "Tailwind", icon: "tailwindcss" },
        { name: "Git", icon: "git" },
        { name: "GA4", icon: "google" },
        { name: "Figma", icon: "figma" },
        { name: "Photoshop", icon: "photoshop" },
        { name: "Node.js", icon: "nodejs" }
      ].map((skill) => (
        <div class="group relative flex flex-col items-center justify-center p-6 rounded-2xl border border-slate-100 bg-white shadow-sm transition-all duration-300 hover:shadow-md hover:border-emerald-500 hover:-translate-y-1">
          {/* Subtle background glow on hover */}
          <div class="absolute inset-0 bg-emerald-50 opacity-0 group-hover:opacity-100 rounded-2xl transition-opacity duration-300 -z-10"></div>
          
          <img
            src={`https://cdn.jsdelivr.net/gh/devicons/devicon/icons/${skill.icon}/${skill.icon}-original.svg`}
            alt={skill.name}
            class="w-12 h-12 grayscale group-hover:grayscale-0 transition-all duration-300"
            onerror="this.src='https://cdn.jsdelivr.net/gh/devicons/devicon/icons/chrome/chrome-original.svg'" 
          />
          
          <p class="mt-4 text-xs font-bold text-slate-500 uppercase tracking-widest group-hover:text-slate-900 transition-colors">
            {skill.name}
          </p>
        </div>
      ))
    }
  </div>
</section>